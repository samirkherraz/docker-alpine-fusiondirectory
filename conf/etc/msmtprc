# Set default values for all following accounts.
defaults
auth           {SMTP_AUTH}
tls            {SMTP_TLS}
tls_trust_file /etc/ssl/certs/ca-certificates.crt
syslog         on

account        default
host           {SMTP_HOST}
port           {SMTP_PORT}
from           {SMTP_FROM}
user           {SMTP_USER}
password       {SMTP_PASS}

# Set a default account
account default : default
#aliases        /etc/aliases
